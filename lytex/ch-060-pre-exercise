#!/usr/bin/nodejs

var ch = require( 'chromatic' );
var ScaleGenerator = require( 'chromatic/formatter' );
var OUTPUT_PATH = 'out/'

var c = new ScaleGenerator( OUTPUT_PATH /*, 'scales-exercise' */ );
c.writeHeader0( "Build Fluency for accidentals" );

c.writeScore( 
		"@do  do  fa te, me le | \n " +
		"@ra  do, fa te, me le | \n " +
		"@re  do, fa te, me le | \n " +
		"@me  do, fa te, me le | \n " +
		"@mi  do, fa te, me le | \n " +
		"@fa  do, fa te, me le | \n " +
		"@se  do, fa te, me le | \n " +
		"@sol do, fa te, me le | \n " +
		"@le  do, fa te, me le | \n " +
		"@la  do, fa te, me le | \n " +
		"@te  do, fa te, me le | \n " +
		"@ti  do, fa te, me le | \n " +
		"@do  do1" 
		);

c.close();

