#!/usr/bin/nodejs

var ch = require( 'chromatic' );
var ScaleGenerator = require( 'chromatic/formatter' );
var OUTPUT_PATH = 'out/'

var c = new ScaleGenerator( OUTPUT_PATH /*, 'scales-exercise' */ );
c.writeHeader0( "4th/5th Motions" );

c.writeHeader3( "4th Motion" );
c.writeScore( 
		"@do  do  fa te, me le  |           " +
		"@ra  do, fa te, me le  |           " +
		"@re  do, fa te, me le  |           " +
		"@me  do, fa te, me le  | \\break   " +

		"@mi  do, fa te, me le  |           " +
		"@fa  do, fa te, me le  |           " +
		"@se  do, fa te, me le  |           " +
		"@sol do, fa te, me le  |  \\break  " +

		"@le  do, fa te, me le  |           " +
		"@la  do, fa te, me le  |           " +
		"@te  do, fa te, me le  |           " +
		"@ti  do, fa te, me le  |  \\break  " +
		"@do  do1" 
		);

c.writeHeader3( "5th Motion" );
c.writeScore( 
		"@do   do' sol' re' la mi' |          " +
		"@ti   do, sol' re' la mi' |          " +
		"@li   do, sol' re' la mi' |          " +
		"@la   do, sol' re' la mi' |  \\break " +

		"@si   do, sol' re' la mi' |          " +
		"@sol  do, sol' re' la mi' |          " +
		"@fi   do, sol' re' la mi' |          " +
		"@fa   do, sol' re' la mi' |  \\break " +

		"@mi   do, sol' re' la mi' |          " +
		"@ri   do, sol' re' la mi' |          " +
		"@re   do, sol' re' la mi' |          " +
		"@di   do, sol' re' la mi' |  \\break " +
		"@do  do1" 
		);

c.close();

