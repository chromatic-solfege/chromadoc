#!/usr/bin/nodejs

var ch = require( 'chromatic' );
var ScaleGenerator = require( 'scale-generator' );
var OUTPUT_PATH = 'out/'
var c = new ScaleGenerator( OUTPUT_PATH, 'scales-harmonic' );

c.writeHeader3( "Harmonic Minor Scale" );
c.writeScore(  "harmonic-01",                  "do@(do,re,me,fa,sol,le,ti)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Locrian \\natural 13th Scale" );
c.writeScore(  "harmonic-02",                  "te@(re,me,fa,sol,le,ti,do)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Ionian \\sharp 5th Scale" );
c.writeScore(  "harmonic-03",                  "la@(me,fa,sol,le,ti,do,re)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Dorian \\sharp 11th Scale" );
c.writeScore(  "dorian-04",                   "sol@(fa,sol,le,ti,do,re,me)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Phrygian Major Scale ( Harmonic Minor Perfect 5th Below )" );
c.writeTextBody( "(Mixolydian \\flat 9th \\flat 13th)" );
c.writeScore(  "harmonic-05",                  "fa@(sol,le,ti,do,re,me,fa)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Lydian \\sharp 9th Scale ( Super Locrian Scale )" );
c.writeScore(  "harmonic-06",                  "mi@(le,ti,do,re,me,fa,sol)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Ionian Diminished 7th Scale ( Altered Scale )" );
c.writeScore(  "harmonic-07",                  "ra@(ti,do,re,me,fa,sol,le)  1 2 3 4 5 6 7"   ,  0.6, [] );

c.close();


