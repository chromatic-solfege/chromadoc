#!/usr/bin/nodejs

var ch = require( 'chromatic' );
var ScaleGenerator = require( 'scale-generator' );
var s = require( './scale-settings.js' );
var OUTPUT_PATH = 'out/'
var c = new ScaleGenerator( OUTPUT_PATH /*, 'scales-melodic' */ );

c.writeHeader3( "Melodic Minor Scale" );
c.writeScore(  "melodic-01",                  "do@(do,re,me,fa,sol,la,ti)  1 2 3 4 5 6 7 s 7 6 5 4 3 2 1"   ,  s.scale, s.dimension );
c.writeHeader3( "Phrygian \\natural 13th Scale" );
c.writeScore(  "melodic-02",                  "te@(re,me,fa,sol,la,ti,do)  1 2 3 4 5 6 7 s 7 6 5 4 3 2 1"   ,  s.scale, s.dimension );
c.writeHeader3( "Lydian \\sharp 5th Scale" );
c.writeScore(  "melodic-03",                  "la@(me,fa,sol,la,ti,do,re)  1 2 3 4 5 6 7 s 7 6 5 4 3 2 1"   ,  s.scale, s.dimension );
c.writeHeader3( "Mixolydian \\sharp 11th Scale" );
c.writeScore(  "melodic-04",                 "sol@(fa,sol,la,ti,do,re,me)  1 2 3 4 5 6 7 s 7 6 5 4 3 2 1"   ,  s.scale, s.dimension );
c.writeHeader3( "Aeolian Majour Scale ( Mixolydian \\flat 13th )" );
c.writeScore(  "melodic-05",                  "fa@(sol,la,ti,do,re,me,fa)  1 2 3 4 5 6 7 s 7 6 5 4 3 2 1"   ,  s.scale, s.dimension );
c.writeHeader3( "Locrian \\natural 9th Scale ( Super Locrian Scale )" );
c.writeScore(  "melodic-06",                  "me@(la,ti,do,re,me,fa,sol)  1 2 3 4 5 6 7 s 7 6 5 4 3 2 1"   ,  s.scale, s.dimension );
c.writeHeader3( "Ionian \\flat All Scale ( Altered Scale )" );
c.writeScore(  "melodic-07",                  "ra@(ti,do,re,me,fa,sol,la)  1 2 3 4 5 6 7 s 7 6 5 4 3 2 1"   ,  s.scale, s.dimension );

c.close();


