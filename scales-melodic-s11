#!/usr/bin/nodejs

var ch = require( 'chromatic' );
var ScaleGenerator = require( 'scale-generator' );
var OUTPUT_PATH = 'out/'
var c = new ScaleGenerator( OUTPUT_PATH, 'scales-melodic-s11' );

c.writeHeader3( "Melodic Minor Scale" );
c.writeScore(  "melodic-s11-01",                  "do@(do,re,me,fi,sol,la,ti)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Phrygian \\natural 13th Scale" );
c.writeScore(  "melodic-s11-02",                  "te@(re,me,fi,sol,la,ti,do)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Lydian \\sharp 5th Scale" );
c.writeScore(  "melodic-s11-03",                  "la@(me,fi,sol,la,ti,do,re)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Mixolydian \\sharp 11th Scale" );
c.writeScore(  "melodic-s11-04",                 "sol@(fi,sol,la,ti,do,re,me)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Aeolian Majour Scale ( Mixolydian \\flat 13th )" );
c.writeScore(  "melodic-s11-05",                  "fi@(sol,la,ti,do,re,me,fi)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Locrian \\natural 9th Scale ( Super Locrian Scale )" );
c.writeScore(  "melodic-s11-06",                  "me@(la,ti,do,re,me,fi,sol)  1 2 3 4 5 6 7"   ,  0.6, [] );
c.writeHeader3( "Ionian \\flat All Scale ( Altered Scale )" );
c.writeScore(  "melodic-s11-07",                  "ra@(ti,do,re,me,fi,sol,la)  1 2 3 4 5 6 7"   ,  0.6, [] );

c.close();


